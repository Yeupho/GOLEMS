<p id="notice"><%= notice %></p>

<h1>Colors</h1>

<table>
  <thead>
  <tr>
    <th>Color code</th>
    <th>Color name</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @colors.each do |color| %>
      <tr data-link="<%= color_path(color) %>">
        <td><%= color.color_code %></td>
        <td><%= color.color_name %></td>
        <td><%= link_to 'Destroy', color, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Color', new_color_path %>