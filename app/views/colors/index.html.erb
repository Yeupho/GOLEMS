<div class="panel panel-default">
  <div class="panel-heading">
    <h2 class="panel-title">Colors</h2>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-1">
        <%= render 'colors/search' %>
        </div>
      </div>

      <div class="col-lg-1 col-lg-offset-1">
        <button type="button" class="btn btn-primary btn-md show-btn">
          <span class="glyphicon glyphicon-plus"></span>
          <br>
          New Color
        </button>
      </div>
    </div>

    <div class="imaginary_container">
      <table class="table table-hover">
        <thead>
        <tr>
          <th>Color Code</th>
          <th>Color Name</th>
          <th></th>
        </tr>
        </thead>

        <tbody>
        <% @colors.each do |color| %>
            <tr data-link="<%= color_path(color) %>">
              <td><span class="simplecolorpicker icon color-picked" style="background-color: <%= color.color_code %>;"><%= color.color_code %></span></td>
              <td><%= color.color_name %></td>
              <td><div class="dropdown">
                <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown"><span class="caret"></span></button>
                <ul class="dropdown-menu">
                  <li><%= link_to 'Detail', color %></li>
                  <li><%= link_to 'Edit', edit_color_path(color) %></li>
                  <li><%= link_to 'Archive', color_path(color, type: :normal),method: :delete,class: ' ', data: { confirm: 'Are you sure?' } %></li>
                </ul>
              </div></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>


  </div>
</div>