<div class="panel panel-default">
  <div class="panel-heading">
    <h2 class="panel-title">Colors</h2>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-1">
        <div class="input-group stylish-input-group">
          <input type="text" class="form-control" placeholder="Search">
          <span class="input-group-addon">
                    <button type="submit">
                      <span class="glyphicon glyphicon-search"></span>
                    </button>
                  </span>
        </div>
      </div>

      <div class="col-lg-1 col-lg-offset-1">
        <div class="col-lg-4 text-center">
          <%= link_to '<span class="glyphicon glyphicon-plus"></span><br>New Color'.html_safe, new_color_path, class: "btn btn-primary btn-md show-btn", :method => :get %>
        </div>
      </div>
    </div>

    <div class="imaginary_container">
      <table class="table table-hover">
        <thead>
        <tr>
          <th>Color</th>
          <th>Color Code</th>
          <th>Color Name</th>
          <th>Action</th>
        </tr>
        </thead>

        <tbody>
        <% @colors.each do |color| %>
            <tr data-link="<%= color_path(color) %>">
              <td><span class="simplecolorpicker icon color-picked" style="background-color: <%= color.color_code %>;"></span></td>
              <td><%= color.color_code %></td>
              <td><%= color.color_name %></td>
              <td><div class="dropdown">
                <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown"><span class="caret"></span></button>
                <ul class="dropdown-menu">
                  <li><%= link_to 'Detail', color %></li>
                  <li><%= link_to 'Edit', edit_color_path(color) %></li>
                  <li><%= link_to 'Archive', color_path(color, type: :normal),method: :delete,class: ' ', data: { confirm: 'Are you sure?' } %></li>
                </ul>
              </div></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>


  </div>
</div>