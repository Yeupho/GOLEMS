<%= form_for(color) do |f| %>
  <% if color.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(color.errors.count, "error") %> prohibited this color from being saved:</h2>

      <ul>
      <% color.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="row"><h4 class="col-lg-10 col-lg-offset-1">Color Code</h4></div>
    <div class="row"><div class="col-lg-10 col-lg-offset-1"><%= f.text_field :color_code, placeholder: '#000000' %></div></div>
  </div>
  <div class="row">
    <div class="row"><h4 class="col-lg-10 col-lg-offset-1">Color ID</h4></div>
    <div class="row"><div class="col-lg-10 col-lg-offset-1"><%= f.text_field :color_name, placeholder: 'Ceramics Color Code' %></div></div>
  </div>
  <div class="row"><span><br></span></div>
    <div class="row footer">
      <div class="col-lg-3 col-lg-offset-5 text-right">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
      </div>
      <div class="col-lg-4 text-left">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    </div>
<% end %>
