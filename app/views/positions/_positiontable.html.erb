<div class="panel panel-default">
  <div class="panel-heading">
    <h2 class="panel-title">Positions</h2>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-1">
        <div class="input-group stylish-input-group">
          <input type="text" class="form-control" placeholder="Search">
          <span class="input-group-addon">
                    <button type="submit">
                      <span class="glyphicon glyphicon-search"></span>
                    </button>
                  </span>
        </div>
      </div>

      <div class="col-lg-1 col-lg-offset-1">
        <div class="col-lg-4 text-center">
          <%= link_to '<span class="glyphicon glyphicon-plus"></span><br>New Position'.html_safe, new_position_path, class: "btn btn-primary btn-md show-btn", :method => :get %>
        </div>
      </div>
    </div>

    <div class="imaginary_container">
      <table class="table table-hover">
        <thead>
        <tr>
          <th>Employee</th>
          <th>Position</th>
          <th></th>
        </tr>
        </thead>

        <tbody>
        <% @positions.each do |position| %>
            <tr data-link="<%= position_path(position) %>">
              <td><%= position.employee.first_name %></td>
              <td><%= position.employee_type.employee_type_desc %></td>
              <td><div class="dropdown">
                <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown"><span class="caret"></span></button>
                <ul class="dropdown-menu">
                  <li><%= link_to 'Detail', position %></li>
                  <li><%= link_to 'Edit', edit_position_path(position) %></li>
                  <li><%= link_to 'Archive', position_path(position, type: :normal),method: :delete,class: ' ', data: { confirm: 'Are you sure?' } %></li>
                </ul>
              </div></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>