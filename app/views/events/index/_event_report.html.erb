<div class="panel panel-default">
  <div class="panel-heading">
    <h2 class="panel-title">Event</h2>
  </div>
  <div class="panel-body">

    <div class="imaginary_container">
      <table class="table table-hover">
        <thead>
        <tr>
          <th>Event name</th>
          <th>Time</th>
          <th>Event type</th>
          <th>Total</th>
          <th>Color</th>
          <th></th>
        </tr>
        </thead>

        <tbody>
        <% @events.each do |event| %>
            <tr data-link="<%= event_path(event) %>">
              <td><%= event.event_name %></td>
              <td><%= event.start_time.strftime("%l:%M %p") %> - <%= event.end_time.strftime("%l:%M %p") %></td>
              <td><%= event.event_type.event_type_desc %></td>
              <td></td>
              <td><span class="simplecolorpicker icon color-picked" style="background-color: <%= event.color.color_code %>;"></span></td>
              <td><div class="dropdown">
                <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown"><span class="caret"></span></button>
                <ul class="dropdown-menu">
                  <row><%= link_to 'Detail', event %></row>
                  <row><%= link_to 'Edit', edit_event_path(event) %></row>
                  <row><%= link_to 'Archive', event_path(event, type: :normal),method: :delete,class: ' ', data: { confirm: 'Are you sure?' } %></row>
                </ul>
              </div></td>

            </tr>
        <% end %>
        </tbody>

      </table>
    </div>

  </div>
</div>