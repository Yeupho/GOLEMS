<p id="notice"><%= notice %></p>

<div class="row">
  <div class="imaginary_container">

    <div class="col-lg-1 col-lg-offset-9">
      <button type="button" class="btn btn-primary btn-md" data-toggle="modal" data-target="#newModal">
        <span class="glyphicon glyphicon-plus"></span>
        New Event
      </button>
    </div>

    <div class="col-lg-1">
      <%= link_to '<span class="glyphicon glyphicon-plus">New Walk-In</span>'.html_safe, new_customer_path, class: "btn btn-default", :method => :get %>
    </div>

  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <%= render 'event_report' %>
  </div>
</div>


<div class="row">
  <div class="col-lg-12">
    <%= render 'walkin_report' %>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="newModal" tabindex="-1" role="dialog" aria-labelledby="newEventLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="newEventLabel">New Event</h4>
      </div>
      <div class="modal-body">
        <%= render 'event_form', event: @event %>
      </div>
    </div>
  </div>
</div>