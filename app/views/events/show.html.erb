<p id="notice"><%= notice %></p>

<div class="page-header">
  <div class="row">
    <div class="col-lg-8">
      <h1><%= @event.event_name %></h1>
    </div>

    <div class="col-lg-3">
      <%= render 'events/show/buttons' %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-6">
    <div class="well">
      <div class="row">
        <div class="col-lg-5">
          <p><strong>Category</strong></p>
          <div class="inline-paragraph"><%= @event.event_type.event_type_desc %></div>
          <br>
          <p><strong>Event Color</strong></p>
          <span class="simplecolorpicker icon color-circle" style="background-color: <%= @event.color.color_code %>;"></span>
        </div>

        <div class="col-lg-5 col-lg-offset-2">
          <p><strong>Date</strong></p>
          <div class="inline-paragraph"><%= @event.event_date.strftime("%B %-d, %Y") %></div>
          <br>
          <p><strong>Time</strong></p>
          <div class="inline-paragraph"><%= @event.start_time.strftime("%l:%M %p") %> - <%= @event.end_time.strftime("%l:%M %p") %></div>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-12">
          <p class="note-header"><strong>Description</strong></p>
          <% if @event.event_description.blank? %>
              <div class="note-body">No Notes...</div>
          <% else %>
              <div class="note-body"><%= @event.event_description %></div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="col-lg-6">
    <h3 style="color: #C33764">Hosts</h3>

    <div class="row">
      <div class="col-lg-2"><h4>Add Hosts:</h4></div>
      <%= render 'events/show/hosts_form' %>
    </div>

    <br>

    <div class="row">
      <% @hosts.each do |h| %>
          <div class="col-lg-3 text-left">
            <%= button_to employee_event_path(h, type: :normal),method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-lg show-btn' do %>
                <span class="glyphicon glyphicon-remove-sign"></span>
                <%= h.first_name %> <%= h.last_name %>
            <% end %>
          </div>
      <% end %>
    </div>
  </div>
</div>

<h2>Customers</h2>

<div class="row">
  <%= render 'events/show/customers_form' %>
</div>

<br>

<table class="table table-hover">
  <thead>
  <tr>
    <th>Name</th>
    <th>Kids painting</th>
    <th>Adults painting</th>
    <th>Visitors</th>
    <th>Number in party</th>
    <th>Customer Total</th>
    <th>Actions</th>
  </tr>
  </thead>

  <tbody>
  <% event_total = 0 %>
  <% @customer_events.each do |customer_event| %>
      <% taxes = (customer_event.sales * 825)/10000 %>
      <% event_total = event_total + customer_event.sales + taxes %>
      <% visitor =  customer_event.number_in_party - (customer_event.kids_painting + customer_event.adults_painting) %>
      <tr data-link="<%= customer_event_path(customer_event) %>" class="clickable-row">
        <td><%= customer_event.first_name %> <%= customer_event.last_name %></td>
        <td><%= customer_event.kids_painting %></td>
        <td><%= customer_event.adults_painting %></td>
        <td><%= visitor %></td>
        <td><%= customer_event.number_in_party %></td>
        <td><%=  number_to_currency(customer_event.sales + taxes) %></td>
        <td><div class="dropdown">
          <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown"><span class="caret"></span></button>
          <ul class="dropdown-menu">
            <li><%= link_to 'Detail' %></li>
            <li><%= link_to 'Edit' %></li>
            <li><%= link_to 'Delete' %></li>
          </ul>
        </div></td>
      </tr>

  <% end %>
  </tbody>
</table>

<br>

<div class="row">
  <div class="col-lg-9 text-right"><h4>Event Total:</h4></div>
  <div class="col-lg-1 text-left"><h4><%= number_to_currency(event_total) %></h4></div>
</div>


