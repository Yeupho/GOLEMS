<p id="notice"><%= notice %></p>

<div class="page-header">
  <h1><%= @event.event_name %></h1>
</div>

<div class="row">
  <div class="col-lg-6">
    <div class="well">

      <div class="row">
        <div class="col-lg-6">
          <p>
            <strong>Category:</strong>
            <%= @event.event_type_id %>
          </p>
        </div>
        <div class="col-lg-6">
          <p>
            <strong>Color</strong><br>
            <%= @event.color_id %>
          </p>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-12">
          <div class="row">
            <div class="col-lg-12">
              <p>
                <strong>Date:</strong>
                <%= @event.event_date.strftime("%B %e, %Y") %>
              </p>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-12">
              <p>
                <strong>Time:</strong>
                <%= @event.start_time.strftime("%l:%M %p") %> - <%= @event.end_time.strftime("%l:%M %p") %>
              </p>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-12">
          <p>
            <strong>Description</strong><br>
            <blockquote>
              <%= @event.event_description %>
            </blockquote>
          </p>
        </div>
      </div>

    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-1 col-lg-offset-4">
    <button type="button" class="btn btn-primary btn-md" data-toggle="modal" data-target="#editModal">
      <span class="glyphicon glyphicon-edit"></span>
      <br>
      Edit
    </button>
  </div>

  <div class="col-lg-1">
    <%= link_to '<span class="glyphicon glyphicon-remove-sign"><br>Back</span>'.html_safe, events_path, class: "btn btn-primary btn-md", :method => :get %>
  </div>
</div>

<p>
  <strong>Event status:</strong>
  <%= @event.event_status_id %>
</p>

<p>
  <strong>Archive:</strong>
  <%= @event.archive %>
</p>

<!-- Modal -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editEventLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="editEventLabel">Update Employee</h4>
      </div>
      <div class="modal-body">
        <%= render 'event_form', event: @event %>
      </div>
    </div>
  </div>
</div>