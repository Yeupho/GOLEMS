<div class="row">
  <div class="col-lg-8 col-lg-offset-2">
    <div class="panel text-center shadow-pane event-list">
      <div class="panel-heading month">
        <div class="row"><h3><%= Date.today.strftime("%b") %></h3></div>
      </div>
      <div class="panel-body date">
        <div class="row"><%= Date.today.strftime("%d") %></div>
      </div>
    </div>
  </div>
</div>

<% @event_list.each do |event_list| %>
    <div class="panel pane-default shadow-pane parent">

      <div class="child" style="background-color: <%= event_list.event.color.color_code %>"></div>

      <div>
        <br>
        <div class="row">
          <div class="col-lg-4 text-center">
            <h3><%= event_list.event.start_time.strftime("%l:%M") %></h3>
            <h3><%= event_list.event.start_time.strftime("%p") %></h3>
          </div>

          <div class="col-lg-6">
            <div class="row"><h3><%= event_list.event.event_name %></h3></div>
            <div class="row"><small><%= event_list.event.event_type.event_type_desc %></small></div>
            <br>
            <div class="row">
              <div class="col-lg-4 text-center"><span class="glyphicon glyphicon-user"></span>  <%= event_list.kids_painting %></div>
              <div class="col-lg-4 text-center"><span class="glyphicon glyphicon-user"></span>  <%= event_list.adults_painting %></div>
              <div class="col-lg-4 text-center"><span class="glyphicon glyphicon-user"></span>  <%= event_list.number_in_party %></div>
            </div>
          </div>
        </div>
        <br>
      </div>

    </div>
<% end %>


