<div class="panel panel-default" style="float:left;margin-top:25px;margin-left:25px;background-color:#FFFFFF  ">
  <div class="panel panel-heading"><h2 class="panel-title" style="font-size:20px;">Most popular products in the past month</h2></div>
  <div class="panel panel-body" style="padding:0px;padding-left:10px;">
    <%= pie_chart Admin.MostPopProd5, library: {legend: {position: "right"}},colors:["#4d9de0","#e15554","#e1bc29","#3bb273","#7768ae"],
                  height:"200px",width:"400px",donut:true,download:true %>
  </div>
</div>

<div class="panel panel-default" style="position:absolute;top:420px;left:640px;width:415px;">

  <div class="panel-heading">
    <h2 class="panel-title">Product Type</h2>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-lg-5 col-lg-offset-0">
        <% if @products.length > 0 && @products.total_pages > 1 %>
            <div class="input-group stylish-input-group">
              <input type="text" class="form-control" placeholder="Search">
              <span class="input-group-addon">
                    <button type="submit">
                      <span class="glyphicon glyphicon-search"></span>
                    </button>
                  </span>
            </div>
        <% end %>
      </div>

      <div class="col-lg-1 col-lg-offset-1">
        <%= render 'product_types/index/buttons' %>
      </div>
    </div>

    <div class="imaginary_container">
      <table class="table table-hover">
        <thead>
        <tr>
          <th>Product type desc</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @product_types.each do |product_type| %>
            <tr data-link="<%= product_type_path(product_type) %>">
              <td><%= product_type.product_type_desc %></td>
              <td><div class="dropdown">
                <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown"><span class="caret"></span></button>
                <ul class="dropdown-menu">
                  <li><%= link_to 'Detail', product_type %></li>
                  <li><%= link_to 'Edit', edit_product_type_path(product_type) %></li>
                  <li><%= link_to 'Delete', product_type_path(product_type, type: :normal),method: :delete,class: ' ', data: { confirm: 'Are you sure?' } %></li>
                </ul>
              </div></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>

    <div class="row text-center">
      <% if @product_types.length > 0 && @product_types.total_pages > 1 %>
          <%= will_paginate @product_types, renderer: BootstrapPagination::Rails, :param_name => 'product_type_page' %>
          <div class="page_info">
            <%= page_entries_info @product_types %>
          </div>
      <% end %>
    </div>
  </div>
</div>