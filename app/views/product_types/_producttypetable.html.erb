<div style="float:left;margin-left:25px"><h1 style="color: #C33764">Most popular products in the past month</h1>
  <%= pie_chart Event.where(:event_date => 1.months.ago .. Time.now)
                    .joins(:customer_events).joins(:customer_event_products).joins(:products).group(:product_name)
                    .sum('customer_event_products.quantity').first(5),
                library: {legend: {position: "right"}}, width:"600px" %></div>

<div class="panel panel-default" style="width:400px;float:left;margin:25px">

  <div class="panel-heading">
    <h2 class="panel-title">Product Type</h2>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-lg-5 col-lg-offset-0">
        <% if @products.length > 0 && @products.total_pages > 1 %>
            <div class="input-group stylish-input-group">
              <input type="text" class="form-control" placeholder="Search">
              <span class="input-group-addon">
                    <button type="submit">
                      <span class="glyphicon glyphicon-search"></span>
                    </button>
                  </span>
            </div>
        <% end %>
      </div>

      <div class="col-lg-1 col-lg-offset-1">
        <div class="col-lg-4 text-center">
          <%= link_to '<span class="glyphicon glyphicon-plus"></span><br>New Type'.html_safe, new_product_path, class: "btn btn-primary btn-md show-btn", :method => :get %>
        </div>
      </div>
    </div>

    <div class="imaginary_container">
      <table class="table table-hover">
        <thead>
        <tr>
          <th>Product type desc</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @product_types.each do |product_type| %>
            <tr data-link="<%= product_type_path(product_type) %>">
              <td><%= product_type.product_type_desc %></td>
              <td><div class="dropdown">
                <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown"><span class="caret"></span></button>
                <ul class="dropdown-menu">
                  <li><%= link_to 'Detail', product_type %></li>
                  <li><%= link_to 'Edit', edit_product_type_path(product_type) %></li>
                  <li><%= link_to 'Delete', product_type_path(product_type, type: :normal),method: :delete,class: ' ', data: { confirm: 'Are you sure?' } %></li>
                </ul>
              </div></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>

    <div class="row text-center">
      <% if @product_types.length > 0 && @product_types.total_pages > 1 %>
          <%= will_paginate @product_types, renderer: BootstrapPagination::Rails, :param_name => 'product_type_page' %>
          <div class="page_info">
            <%= page_entries_info @product_types %>
          </div>
      <% end %>
    </div>
  </div>
</div>