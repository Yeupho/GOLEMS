<div class="panel panel-default shadow-pane" style="float:left;width:600px;margin-top:10px;">
  <div class="panel-heading">
    <h2 class="panel-title">Countries</h2>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-lg-6 col-lg-offset-0">
      </div>
      <div class="col-lg-1 col-lg-offset-3">
        <%= render 'countries/index/buttons' %>
      </div>
    </div>

    <div class="imaginary_container">
      <table class="sctable">
        <thead class="sctable">
        <tr>
          <th class="col-lg-5">Country name</th>
          <th class="col-lg-5">Country abbrev</th>
          <th class="col-lg-5">Action</th>
        </tr>
        </thead>

        <tbody class="sctable">
        <% @countries.each do |country| %>
            <tr class="sctable" data-link="<%= country_path(country) %>">
              <td class="col-lg-5"><%= country.country_name %></td>
              <td class="col-lg-5"><%= country.country_abbrev %></td>
              <td class="col-lg-5"><div class="dropdown">
                <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown"><span class="caret"></span></button>
                <ul class="dropdown-menu">
                  <li><%= link_to 'Edit', edit_country_path(country) %></li>
                  <li><%= link_to 'Delete', country_path(country, type: :normal),method: :delete,class: ' ', data: { confirm: 'Are you sure?' } %></li>
                </ul>
              </div></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>

    <div class="row text-center">
      <!--< if @countries.length > 0 && @countries.total_pages > 1 %>-->
          <!--< will_paginate @countries, inner_window:1,outer_window:1,renderer: BootstrapPagination::Rails,-->
                            <!--:param_name => 'country_page',params: {active_tab: 'admin/#locations_tab' } %>-->
          <!--<div class="page_info">-->
            <!--<= page_entries_info @countries %>-->
          <!--</div>-->
      <!--< end %>-->
    </div>
  </div>
</div>

