<p id="notice"><%= notice %></p>

<div class="imaginary_container">
  <h1>States</h1>

  <table class="table table-hover">
    <thead>
    <tr>
      <th>State name</th>
      <th>State abbrev</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @states.each do |state| %>
        <tr data-link="<%= state_path(state) %>">
          <td><%= state.state_name %></td>
          <td><%= state.state_abbrev %></td>
          <td><%= link_to 'Destroy', state, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
</table>
</div>
<br>

<%= link_to 'New State', new_state_path %>
</table>

<div class="row text-center">
  <% if @states.length > 0 && @states.total_pages > 1 %>
      <%= will_paginate @states, renderer: BootstrapPagination::Rails, :param_name => 'state_page' %>
      <div class="page_info">
        <%= page_entries_info @states %>
      </div>
  <% end %>
</div>