<div class="imaginary_container">
  <table class="table table-hover">
    <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Phone</th>
      <th>Email</th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% @employees.only_deleted.each do |employee| %>
        <tr data-link="<%= employee_path(employee) %>" class="clickable-row">
          <td><%= employee.first_name %></td>
          <td><%= employee.last_name %></td>
          <td><%= number_to_phone(employee.phone, area_code: true) %></td>
          <td><%= employee.email %></td>
          <td><%= link_to 'Restore', employee_path(employee, type: :restore),method: :delete,
                          class: 'btn btm-mini btn-warning',
                          data: {
                              confirm: 'Are you sure you want to restore ' + employee.first_name + ' ' + employee.last_name + '?'
                          } %></td>

        </tr>
    <% end %>
    </tbody>

  </table>
</div>