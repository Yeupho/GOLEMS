<div class="imaginary_container">
  <table class="table table-hover">
    <thead>
    <tr>
      <th>Product Name</th>
      <th>Price</th>
      <th>Type</th>
      <th>Action</th>
    </tr>
    </thead>

    <tbody>
    <% @products.only_deleted.each do |product| %>
        <tr data-link="<%= product_path(product) %>">
          <td><%= product.product_name %></td>
          <td><%= number_to_currency(product.product_price) %></td>
          <td><%= product.product_type.product_type_desc %></td>
          <td><%= link_to 'Restore', product_path(product, type: :restore),
                          method: :delete,class: 'btn btm-mini btn-warning',
                          data: { confirm: 'Are you sure?' },
                          redirect_to: '/admin#products_tab01'%></td>

        </tr>
    <% end %>
    </tbody>
  </table>
</div>