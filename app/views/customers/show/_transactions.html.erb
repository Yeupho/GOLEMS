<div class="panel panel-default">
  <div class="panel-heading">
    <h2 class="panel-title">Recent Transactions</h2>
  </div>
  <div class="panel-body">
    <div class="imaginary_container">
      <table class="table table-hover">
        <thead>
        <tr>
          <th>Event</th>
          <th>Event Color</th>
          <th>Event Date</th>
          <th>Total</th>
        </tr>
        </thead>

        <tbody>
        <% @events.each do |event| %>
            <tr data-link="<%= customer_event_path(event) %>" class="clickable-row">
              <td><%= event.event_name %></td>
              <td><span class="simplecolorpicker icon color-picked" style="background-color: <%= event.color_code %>;"></span></td>
              <td><%= event.event_date.strftime("%-m/%-d/%y") %></td>
              <td><%= number_to_currency(event.sales) %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
