<p id="notice"><%= notice %></p>

<div class="page-header">
  <div class="row">
    <div class="col-lg-8">
      <h1><%= @customer.first_name %> <%= @customer.last_name %>
        <small></small>
      </h1>
    </div>

    <div class="col-lg-4">
      <%= render 'customers/show/buttons' %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-8">
    <div class="well">
      <div class="row">
        <div class="col-lg-4">
          <address>
            <strong>Address</strong><br>
            <%= @customer.address %><br>
            <%= @customer.city %>, <%= @customer.state_id %> <%= @customer.zipcode %><br>
            <%= @customer.country_id %>
          </address>
        </div>

        <div class="col-lg-4 col-lg-offset-4 text-center">
          <div class="row">
            <p>
              <strong>Phone</strong><br>
              <%= number_to_phone(@customer.phone, area_code: true) %>
            </p>
          </div>
          <br>
          <div class="row">
            <p>
              <strong>Email</strong><br>
              <%= @customer.email%>
            </p>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-12">
          <p>
            <strong>Comment</strong><br>
          <blockquote>
            <%= @customer.comment %>
          </blockquote>
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="col-lg-4">

  </div>

  <p>
    <strong>Employee status:</strong>
    <%= @customer.customer_status_id %>
  </p>

</div>

<div class="row">
  <div class="col-lg-8">
    <%= render 'customers/show/pieces' %>
  </div>

  <div class="col-lg-4 text-center">
    <%= render 'customers/show/transactions' %>
  </div>
</div>

<%= render 'customers/show/edit_modal' %>







