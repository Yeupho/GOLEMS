<p id="notice"><%= notice %></p>

<% customer_total = 0 %>

<div class="page-header">
  <div class="row">
    <div class="col-lg-8">
      <h1>
        <%= @customer.first_name %> <%= @customer.last_name %>
        <input type="checkbox" checked data-toggle="toggle" data-on="Active" data-off="Inactive">
      </h1>
    </div>

    <div class="col-lg-3">
      <%= render 'customers/show/buttons' %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-6">
    <div class="well">

      <div class="row">
        <div class="col-lg-5">
          <p><strong>Address</strong></p>
          <div class="inline-paragraph">
            <%= @customer.address %><br>
            <%= @customer.city %>, <%= @customer.state.state_abbrev %> <%= @customer.zipcode %><br>
            <%= @customer.country.country_abbrev %>
          </div>
          <br>
          <p><strong>Total Spending</strong></p>
          <% @total_spending.each do |t| %>
              <% studio_fee = t.kids.to_i + t.adults.to_i %>
              <% customer_total = customer_total + t.sales.to_f + studio_fee %>
          <% end %>
          <% taxes = (customer_total * 825)/10000 %>
          <h2 style="color: #C33764"><%= number_to_currency(customer_total + taxes) %></h2>
        </div>

        <div class="col-lg-5 col-lg-offset-2">
          <p><strong>Phone</strong></p>
          <div class="inline-paragraph"><%= number_to_phone(@customer.phone, area_code: true) %></div>
          <br>
          <p><strong>Email</strong></p>
          <div class="inline-paragraph"><%= @customer.email%></div>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-12">
          <p class="note-header"><strong>Notes</strong></p>
          <% if @customer.comment.blank? %>
              <div class="note-body">No Notes...</div>
          <% else %>
              <div class="note-body"><%= @customer.comment %></div>
          <% end %>
        </div>
      </div>

    </div>
  </div>

  <div class="col-lg-6">
    <%= render 'customers/show/transactions' %>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <%= render 'customers/show/pieces' %>
  </div>
</div>








