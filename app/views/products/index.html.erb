<div class="panel panel-default">

<h1>Products</h1>
<br>
<%= link_to 'New Product', new_product_path %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Product name</th>
      <th>Product price</th>
      <th>Product type</th>
      <th>Archive</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.product_name %></td>
        <td><%= product.product_price %></td>
        <td><%= product.product_type.product_type_desc %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Archive', product, method: :delete,class: 'btn btm-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>
  <div class="panel-heading">
    <h2 class="panel-title">Products</h2>
  </div>
  <div class="panel-body">
    <%= render 'customers/index/search' %>

    <div class="imaginary_container">
      <table class="table table-hover">
        <thead>
        <tr>
          <th>Product Name</th>
          <th>Price</th>
          <th>Type</th>
          <th></th>
        </tr>
        </thead>

        <tbody>
        <% @products.each do |product| %>
            <tr data-link="<%= product_path(product) %>">
              <td><%= product.product_name %></td>
              <td><%= number_to_currency(product.product_price) %></td>
              <td><%= product.product_type.product_type_desc %></td>
              <td><div class="dropdown">
                <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown"><span class="caret"></span></button>
                <ul class="dropdown-menu">
                  <li><%= link_to 'Detail', product %></li>
                  <li><%= link_to 'Edit', edit_product_path(product) %></li>
                  <li><%= link_to 'Archive', product_path(product, type: :normal),method: :delete,class: ' ', data: { confirm: 'Are you sure?' } %></li>
                </ul>
              </div></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>


  </div>
</div>