<p id="notice"><%= notice %></p>


<h1>Products</h1>
<%= line_chart CustomerEventProduct.group_by_week(:created_at).where(:created_at=>@selected_date.beginning_of_day..@selected_date.end_of_day).count %>
<table class="table table-hover">
  <thead>
  <tr>
    <th>Product name</th>
    <th>Product price</th>
    <th>Product type</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @products.each do |product| %>
      <tr data-link="<%= product_path(product) %>">
        <td><%= product.product_name %></td>
        <td><%= product.product_price %></td>
        <td><%= product.product_type_id %></td>
        <td><div class="dropdown">
          <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown"><span class="caret"></span></button>
          <ul class="dropdown-menu">
            <li><%= link_to 'Detail', product %></li>
            <li><%= link_to 'Edit', edit_product_path(product) %></li>
            <li><%= link_to 'Archive', product_path(product, type: :normal),method: :delete,class: ' ', data: { confirm: 'Are you sure?' } %></li>
          </ul>
        </div></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>