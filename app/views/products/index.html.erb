<p id="notice"><%= notice %></p>


<h1>Products</h1>
<br>
<%= link_to 'New Product', new_product_path %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Product name</th>
      <th>Product price</th>
      <th>Product type</th>
      <th>Archive</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.product_name %></td>
        <td><%= product.product_price %></td>
        <td><%= product.product_type.product_type_desc %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Archive', product, method: :delete,class: 'btn btm-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

