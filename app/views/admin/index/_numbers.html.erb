  <div class="container vertical-divider">
    <div class="column one-third">
      <h1>7 Day Report</h1>
    </div>
    <div class="column one-third">
      <h4>Weekly Sales</h4>
      <h1 style="margin-top:-10px;">$<%= @weeklysales %></h1>
    </div>
    <div class="column one-third">
      <h4>Weekly Total Visitors</h4>
      <h1 style="margin-top:-10px;"><%= Event.where(:event_date => 1.week.ago .. Time.now)
              .joins(:customer_events)
              .joins(:customer_event_products)
              .sum("customer_events.number_in_party")%></h1>
    </div>
    <div class="column one-third">
      <h4>Products Sold</h4>
      <h1 style="margin-top:-10px;"><%= Event.where(:event_date => 1.week.ago .. Time.now)
                                        .joins(:customer_events)
                                        .joins(:customer_event_products)
                                        .sum("customer_event_products.quantity")%></h1>
    </div>
    <div class="column one-third">
      <h4>Products Kilned</h4>
      <h1 style="margin-top:-10px;"><%= Event.where(:event_date => 1.week.ago .. Time.now)
                                        .where('customer_event_products.pickup_status_id = 2')
                                        .joins(:customer_events)
                                        .joins(:customer_event_products)
                                        .count("customer_event_products.id")%></h1>
    </div>

  </div>


