  <div class="container vertical-divider">
    <div class="column one-third">
      <h1 style="margin-top:-5px;">Past 7-Day Analytics</h1>
      <!--<p><%  1.week.ago %><%  Time.now %></p>-->
    </div>
    <div class="column one-third">
      <h4>Weekly Sales</h4>
      <h1 style="margin-top:-10px;"><%= number_to_currency(@weeklysales) %></h1>
      <%  percent1=(@twoweeksprior/@weeklysales)*100 %>
      <% if @weeklysales > @twoweeksprior %>
          <h6><span style="color:forestgreen "><span class="glyphicon glyphicon-triangle-top"></span><%= percent1.round %>%</span> from prior week</h6>
      <% else %>
          <h6><span class="glyphicon glyphicon-triangle-bottom"></span><%= percent1.round %>% from prior week</h6>
      <% end %>
    </div>

    <div class="column one-third">
      <h4>Weekly Total Visitors</h4>
      <h1 style="margin-top:-10px;"><%= @totalvisitors%>' ' <%= @twototalvisitors%></h1>
      <%  percent2=(@twototalvisitors/@totalvisitors)*100 %>
      <% if @totalvisitors > @twototalvisitors %>
          <h6><span style="color:forestgreen "><span class="glyphicon glyphicon-triangle-top"></span><%= percent2.round %>%</span> from prior week</h6>
      <% else %>
          <h6><span class="glyphicon glyphicon-triangle-bottom"></span><%= percent2.round %>% from prior week</h6>
      <% end %>
    </div>

    <div class="column one-third">
      <h4>Products Sold</h4>
      <h1 style="margin-top:-10px;"><%= @productsold %>' '<%= @twoproductsold %></h1>
      <%  percent3=(@twoproductsold/@productsold)*100 %>
      <% if @productsold > @twoproductsold %>
          <h6><span style="color:forestgreen "><span class="glyphicon glyphicon-triangle-top"></span><%= percent3 %>%</span> from prior week</h6>
      <% else %>
          <h6><span class="glyphicon glyphicon-triangle-bottom"></span><%= percent3.round %>% from prior week</h6>
      <% end %>
    </div>

    <div class="column one-third">
      <h4>Products Kilned</h4>
      <h1 style="margin-top:-10px;"><%= @productsready %> <%= @twoproductsready %></h1>
      <%  percent4=(@twoproductsready/@productsready)*100 %>
      <% if @productsready > @twoproductsready %>
          <h6><span style="color:forestgreen "><span class="glyphicon glyphicon-triangle-top"></span><%= percent4.round %>%</span> from prior week</h6>
      <% else %>
          <h6><span class="glyphicon glyphicon-triangle-bottom"></span><%= percent4.round %>% from prior week</h6>
      <% end %>
    </div>

  </div>
<div style="background-color: #BBBBBB; margin-top:-20px;width:70%;height:1px; ">

</div>

