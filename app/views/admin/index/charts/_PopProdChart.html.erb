<div class="panel panel-default" style="position:absolute;top:200px;background-color:#FFFFFF  ">
  <div class="panel panel-heading">
    <div style="display:inline">
      <h2 class="panel-title" style="font-size:20px;">Most popular products in the past month</h2>
      <span class="dropdown" style="float:right;margin-top:-20px;">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
          <span class="glyphicon glyphicon-menu-hamburger" style="color:white;"></span></a>
        <ul class="dropdown-menu" role="menu">
          <li><a href="#month1">1 Month</a></li>
          <li><a href="#month3">3 Months</a></li>
          <li><a href="#month6">6 Months</a></li>
          <li><a href="#year">1 Year</a></li>
        </ul>
      </span>
    </div>
  </div>
  <div class="panel panel-body" style="padding:0px;padding-left:10px;">
      <span id="main">
        <div id="month1">
          <%= pie_chart rangegraph(1.months.ago, Time.now), library: {legend: {position: "bottom"}},
                        colors:["#4d9de0","#e15554","#e1bc29","#3bb273","#7768ae"],
                        height:"300px",width:"540px",donut:true,download:true %>
        </div>
        <div id="month3" class="hide">
          <%= pie_chart rangegraph(3.months.ago, Time.now), library: {legend: {position: "bottom"}},
                        colors:["#4d9de0","#e15554","#e1bc29","#3bb273","#7768ae"],
                        height:"300px",width:"540px",donut:true,download:true %>
        </div>
        <div id="month6" class="hide">
          <%= pie_chart rangegraph(6.months.ago, Time.now), library: {legend: {position: "bottom"}},
                        colors:["#4d9de0","#e15554","#e1bc29","#3bb273","#7768ae"],
                        height:"300px",width:"540px",donut:true,download:true %>
        </div>
        <div id="year" class="hide">
          <%= pie_chart rangegraph(1.year.ago, Time.now), library: {legend: {position: "bottom"}},
                        colors:["#4d9de0","#e15554","#e1bc29","#3bb273","#7768ae"],
                        height:"300px",width:"540px",donut:true,download:true %>
        </div>
      </span>
  </div>
</div>
<script>
    $('#body1').on('click','ul li a', function(e) {
        $('#main').children().removeClass('active');
        $('#main').children().addClass('hide');
        $('#main').children().addClass('active');
        $($(this).attr('href')).removeClass('hide');
        e.preventDefault();
    });
</script>