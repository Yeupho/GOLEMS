<div class="panel panel-default" style="position:absolute;top:610px;left:800px;height:390px;width:355px;">
  <div class="panel panel-heading"><h2 class="panel-title" style="font-size:20px">Most Profitable Events</h2>
    <span style="float:right;margin-top:-30px;">
    <button type="button" class="btn btn-primary"
            data-toggle="tooltip"
            data-placement="bottom"
            title="Shows most profitable events of all time.">
      <span class="glyphicon glyphicon-info-sign"></span>
    </button>
    </span></div>
  <div class="panel panel-body" style="padding:0px;padding-left:10px;">
    <table class="table table-hover">
      <thead>
      <tr>
        <th>Event</th>
        <th>Date</th>
        <th>Profit</th>
      </tr>
      </thead>
      <tbody>
      <% @mostprofit.each do |f| %>
          <tr>
            <td><%= f.event_name%> </td>
            <td><%= f.event_date.strftime('%m/%d/%Y') %> </td>
            <td>$<%= number_with_precision(f.revenue,:precision=>2) %> </td>
          </tr>
      <% end %>
      </tbody>

    </table>

  </div>
</div>