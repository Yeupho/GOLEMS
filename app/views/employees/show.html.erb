<p id="notice"><%= notice %></p>

<div class="page-header">
  <div class="row">
    <div class="col-lg-8">
      <h1><%= @employee.first_name %> <%= @employee.last_name %>
        <small>
          <% @employee.positions.each do |position| %>
          <%= position.employee_type.employee_type_desc %>
          <% end %>
        </small>
      </h1>
    </div>

      <div class="col-lg-3">
        <%= render 'employees/show/buttons' %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-6">
    <div class="well">

      <div class="row">
        <div class="col-lg-4">
          <address>
            <strong>Address</strong><br>
            <%= @employee.address %><br>
            <%= @employee.city %>, <%= @employee.state_id %> <%= @employee.zipcode %><br>
            <%= @employee.country_id %>
          </address>
        </div>

        <div class="col-lg-4 col-lg-offset-4 text-center">
          <div class="row">
            <p>
              <strong>Phone:</strong><br>
              <%= number_to_phone(@employee.phone, area_code: true) %>
            </p>
          </div>
          <br>
          <div class="row">
            <p>
              <strong>Email</strong><br>
              <%= @employee.email%>
            </p>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-12">
          <p>
            <strong>Comment:</strong><br>
          <blockquote>
            <%= @employee.comment %>
          </blockquote>
          </p>
        </div>
      </div>

    </div>
  </div>

</div>

<p>
  <strong>Employee status:</strong>
  <%= @employee.employee_status_id %>
</p>

<%= render 'employees/show/edit_modal' %>
