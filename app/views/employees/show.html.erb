<p id="notice"><%= notice %></p>

<div class="page-header">
  <div class="row">
    <div class="col-lg-8">
      <h1><%= @employee.first_name %> <%= @employee.last_name %>
        <small>
          <% @employee.positions.each do |position| %>
              <%= position.employee_type.employee_type_desc %>
          <% end %>
        </small>
        <input type="checkbox" checked data-toggle="toggle" data-on="Active" data-off="Inactive">
      </h1>
    </div>

    <div class="col-lg-3">
      <%= render 'employees/show/buttons' %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-6 col-lg-offset-1">
    <div class="well">

      <div class="row">
        <div class="col-lg-6">
          <p><strong>Address</strong></p>
          <div class="inline-paragraph">
            <%= @employee.address %><br>
            <%= @employee.city %>, <%= @employee.state.state_abbrev %> <%= @employee.zipcode %><br>
            <%= @employee.country.country_abbrev %>
          </div>
        </div>

        <div class="col-lg-6">
          <p><strong>Phone</strong></p>
          <div class="inline-paragraph"><%= number_to_phone(@employee.phone, area_code: true) %></div>
          <br>
          <p><strong>Email</strong></p>
          <div class="inline-paragraph"><%= @employee.email%></div>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-12">
          <p class="note-header"><strong>Notes</strong></p>
          <% if @employee.comment.blank? %>
              <div class="note-body">No Notes...</div>
          <% else %>
              <div class="note-body"><%= @employee.comment %></div>
          <% end %>
        </div>
      </div>

    </div>
  </div>

  <div class="col-lg-4">
    <div class="well"></div>
  </div>
</div>

<%= render 'employees/show/edit_modal' %>
