<div id="bg-img">
  <div id="bg-gradient">

    <div id="login-title">G.O.L.E.M.S.</div>

    <div class="home">
        <div class="item">

          <div class="content">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="logo"><%= image_tag 'golems.svg' %></div>

                <div class="input-group input-group-2">
                  <span class="input-group-addon input-group-addon-2 glyphicon glyphicon-envelope" aria-hidden="true"></span>
                  <%= f.email_field :email, placeholder: "Email", autofocus: true, :class => "form-control form-control-2" %>
                </div>

                <div class="input-group-2 input-group">
                  <span class="input-group-addon input-group-addon-2 glyphicon glyphicon-lock" aria-hidden="true"></span>
                  <%= f.password_field :password, placeholder: "Password", autocomplete: "off", :class => "form-control form-control-2" %>
                </div>

                <div class="form-group in">
                  <%= f.submit "Log in", :class => "btn btn-block btn-info" %>
                </div>

                <% if devise_mapping.rememberable? -%>
                    <label class="checkbox">
                      <%= f.check_box :remember_me, :class => "checkbox-label" %>
                      <%= f.label :remember_me %>
                    </label>
                <% end -%>
            <% end %>
          </div>

          <div class="row"><div class="col-lg-8 col-lg-offset-2"><%= render "devise/shared/links" %></div></div>

        </div>
    </div>
  </div>
</div>


