<p id="notice"><%= notice %></p>

<h1>Customer Statuses</h1>

<table>
  <thead>
  <tr>
    <th>Customer status description</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @customer_statuses.each do |customer_status| %>
      <tr data-link="<%= customer_status_path(customer_status) %>">
        <td><%= customer_status.customer_status_description %></td>
        <td><%= link_to 'Destroy', customer_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Customer Status', new_customer_status_path %>